<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/styles.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.IncomeController">
    <HBox>
        <TableView fx:id="table" prefHeight="600.0" prefWidth="300.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="195.0" text="Name" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
            </columns>
        </TableView>

        <BarChart fx:id="chart" prefHeight="500.0" prefWidth="500.0">
            <xAxis>
                <CategoryAxis label="Name" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Amount" />
            </yAxis>

        </BarChart>
    </HBox>
</AnchorPane>
