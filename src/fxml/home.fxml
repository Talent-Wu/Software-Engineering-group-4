<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeController">
   <left>
       <VBox alignment="CENTER" prefWidth="150.0" spacing="20" style="-fx-background-color: #e0e0e0;" BorderPane.alignment="CENTER">
           <Button styleClass="menu-item" text="Home" />
           <Button styleClass="menu-item" text="Income" />
           <Button styleClass="menu-item" text="Expenses" />
           <Button styleClass="menu-item" text="Future" />
           <Button styleClass="menu-item" text="MyWallet" />
           <Button styleClass="menu-item" text="Personal Info" />
       </VBox>
   </left>

   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
             <HBox alignment="CENTER" prefHeight="200.0" spacing="50">
                 <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#openWritingWindow" styleClass="image-view">
                     <Image url="@/assets/home_writing.png" />
                 </ImageView>
                 <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#handleCsvImport" styleClass="image-view">
                     <Image url="@/assets/home_csv_import.png" />
                 </ImageView>
                 <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#handleImageClick" styleClass="image-view">
                     <Image url="@/assets/home_ai.png" />
                 </ImageView>
             </HBox>
            <HBox spacing="50" style="-fx-padding: 10px">
               <children>
                  <HBox spacing="10">
                     <children>
                        <Label text="Chinese Yuan Renminbi" />
                     </children>
                  </HBox>
                  <HBox spacing="10">
                     <children>
                        <Label text="7.2645 USD/CNY" />
                     </children>
                  </HBox>
                   <HBox spacing="10">
                       <children>
                           <Label text="0.138 CNY/USD" />
                       </children>
                   </HBox>
                   <HBox spacing="10">
                       <children>
                           <Label text="+0.07%" />
                       </children>
                   </HBox>
               </children>
            </HBox>
            <StackPane fx:id="calendarPane" prefHeight="363.0" prefWidth="650.0">

            </StackPane>
         </children>
      </VBox>

   </center>
</BorderPane>
