<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="600.0" prefWidth="800.0" stylesheets="@/styles.css"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.HomeController">

    <HBox alignment="CENTER" prefHeight="200.0" spacing="50">
        <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#switchWritingPane" styleClass="image-view">
            <Image url="@/assets/home_writing.png"/>
        </ImageView>
        <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#handleCsvImport" styleClass="image-view">
            <Image url="@/assets/home_csv_import.png"/>
        </ImageView>
        <ImageView fitHeight="120" fitWidth="120" onMouseClicked="#handleImageClick" styleClass="image-view">
            <Image url="@/assets/home_ai.png"/>
        </ImageView>
    </HBox>
    <HBox spacing="50" style="-fx-padding: 10px">
        <children>
            <HBox spacing="10">
                <children>
                    <Label text="Chinese Yuan Renminbi"/>
                </children>
            </HBox>
            <HBox spacing="10">
                <children>
                    <Label text="7.2645 USD/CNY"/>
                </children>
            </HBox>
            <HBox spacing="10">
                <children>
                    <Label text="0.138 CNY/USD"/>
                </children>
            </HBox>
            <HBox spacing="10">
                <children>
                    <Label text="+0.07%"/>
                </children>
            </HBox>
        </children>
    </HBox>

    <StackPane fx:id="calendarPane" prefHeight="363.0" prefWidth="650.0">

    </StackPane>
</VBox>
